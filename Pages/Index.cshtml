@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

    <style>
        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        h1 {
            margin-bottom: 20px;
        }

        p {
            margin-bottom: 20px;
        }

        .login-link {
            display: inline-block;
            text-decoration: none;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .login-link:hover {
                background-color: #0056b3;
        }
    </style>
}
    <div class="container">
        <h1>User Login</h1>
        <p>Welkom bij Gym : Kakarott</p>
        <p>Gelieve in te loggen</p>
        <a class="login-link text-dark" asp-area="" asp-page="/Login">Login</a>
    </div>
