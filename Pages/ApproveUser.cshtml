<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gebruikers Goedkeuren</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background: url('https://png.pngtree.com/thumb_back/fh260/background/20230613/pngtree-black-and-white-gym-room-with-a-row-of-equipment-image_2911173.jpg') center center fixed;
            background-size: cover;
        }

        h2 {
            text-align: center;
            color: #007bff;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 10px;
            border-bottom: 1px solid #ddd;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
            color: #333;
        }

        td button {
            padding: 5px 10px;
            margin-right: 5px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            td button:last-child {
                background-color: #dc3545;
            }

            td button:hover {
                background-color: #0056b3;
            }

            td button:last-child:hover {
                background-color: #c82333;
            }
    </style>
</head>
<body>
    <h2>Gebruikers Goedkeuren</h2>
    <table>
        <thead>
            <tr>
                <th>Gebruikersnaam</th>
                <th>E-mail</th>
                <th>Actie</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Gebruiker1</td>
                <td>gebruiker1@example.com</td>
                <td>
                    <button onclick="approveUser('Gebruiker1')">Goedkeuren</button>
                    <button onclick="removeUser('Gebruiker1')">Verwijderen</button>
                </td>
            </tr>
            <tr>
                <td>Gebruiker2</td>
                <td>gebruiker2@example.com</td>
                <td>
                    <button onclick="approveUser('Gebruiker2')">Goedkeuren</button>
                    <button onclick="removeUser('Gebruiker2')">Verwijderen</button>
                </td>
            </tr>
        </tbody>
    </table>

    <script>
        function approveUser(username) {
            // Send an AJAX request to the server to approve the user
            console.log('User ' + username + ' approved.');
            // Reload the page or update UI as needed
        }

        function removeUser(username) {
            // Send an AJAX request to the server to remove the user
            console.log('User ' + username + ' removed.');
            // Reload the page or update UI as needed
        }
    </script>
</body>
</html>

